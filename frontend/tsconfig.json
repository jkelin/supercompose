{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "./pages/**/*.ts",
    "./containers/**/*.ts",
    "./components/**/*.ts",
    "./lib/**/*.ts",
    "./data/**/*.ts",
    "./pages/**/*.tsx",
    "./containers/**/*.tsx",
    "./components/**/*.tsx",
    "./lib/**/*.tsx",
    "./data/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
