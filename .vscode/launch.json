{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "attach",
            "name": "Attach agent",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/agent/dist/**/*.js"
            ]
        },
        {
          "name": "Launch agent via nodemon",
          "type": "pwa-node",
          "request": "launch",
          "cwd": "${workspaceRoot}/agent",
          "runtimeExecutable": "${workspaceRoot}/agent/node_modules/.bin/ts-node-dev",
          "args": [
            "${workspaceRoot}/agent/src/index.ts"
          ],
          "restart": true
        }
    ]
}